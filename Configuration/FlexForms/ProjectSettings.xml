<T3DataStructure>
    <ROOT>
        <sheetTitle>Filter</sheetTitle>
        <type>array</type>
        <el>
            <settings.hideActiveState>
                <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.hideActiveState.label</label>
                <config>
                    <type>check</type>
                    <renderType>checkboxToggle</renderType>
                    <default>0</default>
                    <items>
                        <numIndex index="0">
                            <label></label>
                            <value>1</value>
                            <invertStateDisplay>1</invertStateDisplay>
                        </numIndex>
                    </items>
                </config>
            </settings.hideActiveState>
            <settings.activeState>
                <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.activeState.label</label>
                <config>
                    <type>select</type>
                    <renderType>selectSingle</renderType>
                    <items>
                        <numIndex index="0">
                            <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.activeState.all</label>
                            <value>all</value>
                        </numIndex>
                        <numIndex index="1">
                            <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.activeState.active</label>
                            <value>active</value>
                        </numIndex>
                        <numIndex index="2">
                            <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.activeState.completed</label>
                            <value>completed</value>
                        </numIndex>
                    </items>
                </config>
            </settings.activeState>
            <settings.hideFilter>
                <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.hideFilter.label</label>
                <config>
                    <type>check</type>
                    <renderType>checkboxToggle</renderType>
                    <default>0</default>
                    <items>
                        <numIndex index="0">
                            <label></label>
                            <value>1</value>
                            <invertStateDisplay>1</invertStateDisplay>
                        </numIndex>
                    </items>
                </config>
            </settings.hideFilter>
            <settings.hideSorting>
                <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.hideSorting.label</label>
                <config>
                    <type>check</type>
                    <renderType>checkboxToggle</renderType>
                    <default>0</default>
                    <items>
                        <numIndex index="0">
                            <label></label>
                            <value>1</value>
                            <invertStateDisplay>1</invertStateDisplay>
                        </numIndex>
                    </items>
                </config>
            </settings.hideSorting>
            <settings.sorting>
                <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.sorting.label</label>
                <config>
                    <type>select</type>
                    <renderType>selectSingle</renderType>
                    <itemsProcFunc>FGTCLB\AcademicProjects\Backend\FormEngine\SortingItemsProcFunc->itemsProcFunc</itemsProcFunc>
                </config>
            </settings.sorting>
            <settings.categories>
                <label>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.categories.label</label>
                <description>LLL:EXT:academic_projects/Resources/Private/Language/locallang_be.xlf:flexform.categories.description</description>
                <config>
                    <type>category</type>
                    <default>0</default>
                    <relationship>oneToMany</relationship>
                    <foreign_table>sys_category</foreign_table>
                    <foreign_table_where>AND {#sys_category}.{#type} != '' AND {#sys_category}.{#sys_language_uid} IN (-1, 0)</foreign_table_where>
                    <maxitems>9999</maxitems>
                    <MM>sys_category_record_mm</MM>
                    <MM_match_fields>
                        <fieldname>pi_flexform</fieldname>
                        <tablenames>tt_content</tablenames>
                    </MM_match_fields>
                    <MM_opposite_field>items</MM_opposite_field>
                </config>
            </settings.categories>
        </el>
    </ROOT>
</T3DataStructure>
